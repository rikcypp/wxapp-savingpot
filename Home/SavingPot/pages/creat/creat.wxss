.ui-height-100{
  background-color: #dfd2f9;

}
.blue-button{
  margin-left: 600rpx;
}

page {
  overflow: hidden;
  height: 100%;
}

.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.pay-money {
  margin: 20rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.money-icon {
  width: 32rpx;
  height: 32rpx;
}

.date-text {
  color: gray;
  flex: 1;
  text-align: end;
}

.money-text {
  color: red;
  flex: 1;
  text-align: end;
  margin-right: 20rpx;
}
.addition{
  position: fixed;
  bottom: 450rpx;
  display: flex;
}
.remarks{
  width: 500rpx;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
}
.money{
  display: flex;
  width: 240rpx;
  align-items: center;
}
.calculator {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  background-color: lightgray;
  
   box-sizing: border-box;
   height: 450rpx;
}

.calculator-number {
  flex: 3;
  width: 75%;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
}

.number {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 100%;
  font-weight: bold;
}
.number-hover{
background-color: #3B3B3B;
}

.calculator-operator {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.operator {
  flex: 2;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
