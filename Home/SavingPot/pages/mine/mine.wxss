

.index{
  background-color: #dfd2f9;
  position: absolute;
  height: 100%;
  width: 100%;
}
.userinfo {
  height: 400rpx;
  background-color: #8968CD;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.about-icon {
  width: 32rpx;
  height: 32rpx;
}
.stat{
  display: flex;
  width: 750rpx;
  justify-content: space-around;
}
.about {
  margin: 20rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}
.smallfont{
  font-size: 13px;
  font-weight: lighter;
}